{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Routes": {
    "auctionRead": {
      "ClusterId": "auctions",
      "Match": {
        "Path": "/auctions/{**catch-all}",
        "Method": ["Get"]
      },
      "Transforms": [
        {
          "PathPattern": "api/auctions/{**catch-all}"
        }
      ]
    },
    "auctionWrite": {
      "ClusterId": "auctions",
      "AuthorizationPolicy":  "default",
      "Match": {
        "Path": "/auctions/{**catch-all}",
        "Method": ["Post","Put","Patch", "Delete"]
      },
      "Transforms": [
        {
          "PathPattern": "api/auctions/{**catch-all}"
        }
      ]
    },
    "search": {
      "ClusterId": "search",
      "Match": {
        "Path": "/search/{**catch-all}",
        "Methods": [ "Get" ]
      },
      "Transforms": [
        {
          "PathPattern": "api/search/{**catch-all}"
        }
      ]
    }
  }
}
